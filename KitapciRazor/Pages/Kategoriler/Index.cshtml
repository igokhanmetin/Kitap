@page
@model KitapciRazor.Pages.Kategoriler.IndexModel

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Kategori Listesi
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/Kategoriler/create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Yeni Kategori Ekle
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Kategori Adı
                </th>
                <th>
                    Kategori Numarası
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Kategorilistesi.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>@item.Ad</td>
                    <td>@item.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="/Kategoriler/edit"  asp-route-id="@item.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Düzenle
                            </a>
                            <a asp-page="/Kategoriler/delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>Sil
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
