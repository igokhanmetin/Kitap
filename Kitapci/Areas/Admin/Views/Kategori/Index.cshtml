@model List<Kategori>
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Kategori Listesi</h2>
            </div>
        </div>
        <div class="card-body p-4" style="background-color: white;">
            <div class="row pb-3">
                <div class="col-6">
                </div>
                <div class="col-6 text-end">
                    <a asp-controller="Kategori" asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Yeni Kategori Ekle
                    </a>
                </div>
            </div>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            Kategori Adı
                        </th>
                        <th>
                            Kategori Numarası
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderBy(u => u.DisplayOrder))
                    {
                        <tr>
                            <td>@item.Ad</td>
                            <td>@item.DisplayOrder</td>
                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Kategori" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                                        <i class="bi bi-pencil-square"></i>Düzenle
                                    </a>
                                    <a asp-controller="Kategori" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                                        <i class="bi bi-trash-fill"></i>Sil
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
